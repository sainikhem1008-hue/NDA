<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Duty Date -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDutyDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Duty Date"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            android:padding="8dp"/>

        <!-- Duty From -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDutyFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Duty From"
            android:focusable="false"
            android:clickable="true"
            android:inputType="time"
            android:padding="8dp"/>

        <!-- Duty To -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDutyTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Duty To"
            android:focusable="false"
            android:clickable="true"
            android:inputType="time"
            android:padding="8dp"/>

        <!-- Basic Pay -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etBasicPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Basic Pay"
            android:inputType="numberDecimal"
            android:padding="8dp"/>

        <!-- Dearness Allowance -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDearnessAllowance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dearness Allowance"
            android:inputType="numberDecimal"
            android:padding="8dp"/>

        <!-- Ceiling Limit -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCeilingLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ceiling Limit"
            android:inputType="numberDecimal"
            android:padding="8dp"/>

        <!-- Checkboxes -->
        <CheckBox
            android:id="@+id/cbNationalHoliday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="National Holiday"/>

        <CheckBox
            android:id="@+id/cbWeeklyRest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly Rest"/>

        <CheckBox
            android:id="@+id/cbWeeklyRestDuty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly Rest Duty"/>

        <CheckBox
            android:id="@+id/cbDualDuty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dual Duty"/>

        <!-- Quick Duty Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMorningDuty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning Duty"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEveningDuty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evening Duty"
                android:layout_marginStart="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNightDuty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Night Duty"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Action Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:layout_marginTop="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Records"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export PDF"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exit"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLeaveManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave Management"/>

        <!-- Results Section -->
        <TextView
            android:id="@+id/tvCeilingWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="visible"
            android:padding="4dp"
            android:textStyle="bold"
            android:text=""/>

        <LinearLayout
            android:id="@+id/llResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Results will appear here"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="4dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
