<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Duty Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duty Hours"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/startTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start Time (HH:MM)"
            android:focusable="false"
            android:background="#E0E0E0"
            android:padding="12dp" />

        <EditText
            android:id="@+id/endTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Time (HH:MM)"
            android:focusable="false"
            android:background="#E0E0E0"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <!-- Quick Duty Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnMorningDuty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning (08-16)" />

            <Button
                android:id="@+id/btnEveningDuty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evening (16-00)"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/btnNightDuty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Night (00-08)"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Dual Duty Checkbox -->
        <CheckBox
            android:id="@+id/checkDualDuty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dual Duty"
            android:layout_marginTop="8dp" />

        <!-- Weekly Rest Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly Rest"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/weeklyRestDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Weekly Rest Date"
            android:focusable="false"
            android:background="#E0E0E0"
            android:padding="12dp" />

        <CheckBox
            android:id="@+id/checkWeeklyRestDuty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duty on Weekly Rest" />

        <!-- CR Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compensatory Rest (CR)"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/crDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select CR Date"
            android:focusable="false"
            android:background="#E0E0E0"
            android:padding="12dp" />

        <!-- NDA Calculation -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NDA Calculation"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/basicPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Basic Pay"
            android:inputType="number"
            android:background="#E0E0E0"
            android:padding="12dp" />

        <EditText
            android:id="@+id/dearnessAllowance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dearness Allowance"
            android:inputType="number"
            android:background="#E0E0E0"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/ndaHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total Night Duty Hours"
            android:inputType="number"
            android:background="#E0E0E0"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/ndaResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NDA Result: --"
            android:textColor="#000000"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <!-- Save & Export Buttons -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Duty Record"
            android:layout_marginTop="16dp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnExport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export to PDF"
            android:layout_marginTop="8dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
