<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="NIGHT DUTY CALCULATOR"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="#2196F3" />

        <!-- Duty Date -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Duty Date"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#2196F3">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDutyDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:background="#FFFFFF"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Duty From / To -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="From"
                android:background="#FFFFFF"
                android:elevation="2dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#2196F3">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDutyFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:background="#FFFFFF"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="To"
                android:layout_marginStart="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#2196F3">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDutyTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:background="#FFFFFF"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Quick Duty Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMorningDuty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Morning"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEveningDuty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Evening"
                android:layout_marginStart="4dp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNightDuty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Night"
                android:layout_marginStart="4dp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <!-- Basic Pay -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Basic Pay"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#2196F3">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBasicPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:background="#FFFFFF"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Dearness Allowance -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dearness Allowance"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#2196F3">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDearnessAllowance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:background="#FFFFFF"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Checkboxes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/cbDualDuty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dual Duty"/>

            <CheckBox
                android:id="@+id/cbWeeklyRestDuty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duty on Weekly Rest"/>

            <CheckBox
                android:id="@+id/cbWeeklyRest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly Rest (No Duty)"/>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCalculate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calculate"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save"
                android:layout_marginStart="4dp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View Records"
                android:layout_marginStart="4dp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Export PDF"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear"
                android:layout_marginStart="4dp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Exit"
                android:layout_marginStart="4dp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <!-- Leave Management -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLeaveManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave Management"
            android:layout_marginTop="12dp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"/>

        <!-- Results -->
        <TextView
            android:id="@+id/tvResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tvCeilingWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</ScrollView>
