<resources>
    <!-- App Base Theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_orange</item>
    </style>

    <!-- Custom Input Layout Style for Leave Management -->
    <style name="GreenOptionTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/option_green</item>
        <item name="hintTextColor">@color/option_green</item>
        <item name="android:textColorHint">@color/option_green</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
</resources>
